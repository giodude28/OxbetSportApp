<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="#d4af37"
        card_view:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/eventcard">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/a1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/homes"
                        android:text="Home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/homescoress"
                        android:text="score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_below="@+id/homes"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/vs"
                        android:layout_below="@+id/homescoress"
                        android:text="VS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/awayscores"
                        android:text="Score"
                        android:layout_width="match_parent"
                        android:textColor="#ffffff"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_below="@+id/vs"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/aways"
                        android:text="away"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_below="@+id/awayscores"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/a1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/eventtitles"
                        android:text="Title"
                        android:layout_width="match_parent"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:id="@+id/event1"
                        android:text="ngày:"
                        android:layout_margin="5dp"
                        android:layout_width="35dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        />
                    <TextView
                        android:id="@+id/eventdates"
                        android:text="date"
                        android:layout_margin="5dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_below="@+id/eventtitle"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:id="@+id/event12"
                        android:text="Thể thao"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        />
                    <TextView
                        android:id="@+id/eventsports"
                        android:text="venue"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_below="@+id/eventdate"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>